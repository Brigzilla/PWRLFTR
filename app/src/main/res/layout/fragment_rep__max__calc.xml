<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Rep_Max_Calc">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
        android:id="@+id/enter_weight_textbox"
        android:layout_width="86dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/enter_reps_textbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ems="10"
        android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/weight_text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-light"
            android:text="Weight"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/enter_weight_textbox"
            app:layout_constraintStart_toStartOf="@+id/enter_weight_textbox"
            app:layout_constraintEnd_toEndOf="@id/enter_weight_textbox"/>

        <EditText
            android:id="@+id/enter_reps_textbox"
            android:layout_width="86dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toEndOf="@id/enter_weight_textbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/reps_text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-light"
            android:text="Reps"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/enter_reps_textbox"
            app:layout_constraintStart_toStartOf="@+id/enter_reps_textbox"
            app:layout_constraintEnd_toEndOf="@id/enter_reps_textbox"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>